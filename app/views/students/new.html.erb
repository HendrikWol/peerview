<div class="container">
<h1>Create new student profile</h1>
  <div class="row">
    <div class="col-xs-12 col-md-4-offset-3">
      <%= simple_form_for(@student) do |f| %>
      <%= f.input :email %>
      <%= f.input :first_name %>
      <%= f.input :last_name  %>
      <%= f.input :description %>
      <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 12, :end_year => 1900, :order => [ :day, :month, :year] %>
      <%= f.input :city %>
      <%= f.input :classroom_id, collection: Classroom.all %>
      <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
